<%- include('partials/header') -%>

<div class="container mt-5">
    <%- include('partials/messages') -%>
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Date</th>
                <th>Day</th>
                <th>@ Battery</th>
                <th>pred(ft)</th>
                <th>H/L</th>
                <th>Open</th>
                <th>Close</th>
                <th>Open</th>
                <th>Close</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Date</th>
                <th>Day</th>
                <th>@ Battery</th>
                <th>pred(ft)</th>
                <th>H/L</th>
                <th>Open</th>
                <th>Close</th>
                <th>Open</th>
                <th>Close</th>
            </tr>
        </tfoot>
        <tbody>
            <% tides.forEach((tide)=> { %>
                    <tr>
                        <td><%= tide.date %></td>
                        <td><%= tide.day %></td>
                        <td><%= tide.tideTimeBattery %></td>
                        <td><%= tide.pred_ft %></td>
                        <td><%= tide.h_l %></td>
                        <td class="thick"><%= tide.windowOpen1 %></td>
                        <td ><%= tide.windowClose1 %></td>
                        <td class="thick"><%= tide.windowOpen2 %></td>
                        <td ><%= tide.windowClose2 %></td>
